<!DOCTYPE html>
<html>
  <head>
    <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <style>
        body {
          background: #F8F9FA;
        }
        .reset-form {
          background: #ffffff;
          padding: 30px;
          border-radius: 5px;
          margin-top: 10%;
        }
        .btn-primary {
          background-color: #007BFF;
          border-color: #007BFF;
          color: #ffffff;
        }
      </style>
    </head>
  </head>
  <body>
      <script>
      $(document).ready(function(){
        $("#submit").click(function() {
          const newpassword = $('#newpassword').val();

          const data = {
            newpassword,
          };

          $.ajax({
            type: "PUT",
            url: '/api/v1/password/reset',
            data,
            success: function(serverResponse) {
              if(serverResponse) {
                alert('Password reset successful');
                location.href = '/dashboard';
              }
            },
            error: function(errorResponse) {
              if(errorResponse) {
                alert(`Error resetting password: ${errorResponse.responseText}`);
              }            
            }
          });
        });
      });
      </script>    
    <div>
      <nav class="navbar navbar-inverse" style="padding-left:130px;">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
          </ul>
      </nav>
    </div>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="reset-form">
            <h1 class="text-center">Reset Password</h1>
            <form class="form-horizontal mt-5">
              <div class="form-group">
                  <label for="newpassword" class="col-sm-2 control-label">New Password</label>
                  <div class="col-sm-10">
                      <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="New Password" value="">
                  </div>
              </div>
              <div class="form-group">
                  <div class="col-sm-10 col-sm-offset-2 text-center">
                      <input id="submit" name="submit" type="button" value="Reset Password" class="btn btn-primary">
                  </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>